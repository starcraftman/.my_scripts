#!/usr/bin/env bash
echo 'updating platform'
sudo apt-get update && sudo apt-get dist-upgrade
sudo apt-get autoremove
sudo apt-get -f install
vim +PluginUpdate +qa

DIR=~/.hg-prompt
if [[ -d $DIR ]]; then
  cd $DIR
  hg pull
  cd -
fi

DIR=~/.bash-git-prompt
if [[ -d $DIR ]]; then
  cd $DIR
  git pull
  cd -
fi

DIR=~/.hhighlighter
if [[ -d $DIR ]]; then
  cd $DIR
  git pull
  cd -
fi
