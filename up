#!/usr/bin/env bash
REPOS=( ~/.shell/.[^.]* ~/.shell/..?* ~/.my_scripts )
SYS=generic
if hash apt-get 2>/dev/null; then
    SYS=debian
fi

# Update repositories passed as arguments
update_repos()
{
echo 'updating repos'
pushd .

for dir ; do
    if [ -d "$dir" ]; then
	cd "$dir"
	echo -e " >>> ${T_BGREEN}$dir${T_RESET} <<< "
	if [ -d ".git" ]; then
            git pull
	elif [ -d ".hg" ]; then
            hg pull
	fi
    fi
done

popd
}

build_src() {
    local vim=
    if [ -f "$OPTDIR/bin/vim" ]; then
	vim="vim"
    fi
    \rm -rf "$OPTDIR"
    SysInstall.py src "$vim" >/dev/null 2>&1 &
}

if [ "xdebian" == "x$SYS" ]; then
    echo 'updating debian platform'
    sudo apt-get update && sudo apt-get -y dist-upgrade
    sudo apt-get autoremove
    sudo apt-get -f install
fi

if [ -d ~/.vim/bundle/Vundle.vim ]; then
    echo 'Updating vim plugins.'
    vim +PluginUpdate +qa
fi

update_repos "${REPOS[@]}"

if [ "xdebian" == "x$SYS" ] && [ -d "$OPTDIR" ]; then
    echo 'Updating programs built from source, running in bg...'
    build_src
fi

echo 'done'
