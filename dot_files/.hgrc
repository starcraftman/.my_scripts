[ui]
username = userName
ssh = ssh -C

[defaults]
email = --diffstat --git

[alias]
blame=annotate -u -n
rec=record

[diff]
git=True

[email]
method = smtp
from = userName <userEmail>

[smtp]
tls = True
host = userEmail
#username = userEmailName
#password = userEmailPassword

[extensions]
prompt = ~/.hg-prompt/prompt.py
alias=
convert=
extdiff
graphlog=
patchbomb=
record=

[extdiff]
cmd.sbsdiff  = diff
opts.sbsdiff = -N -b --side-by-side --width=90
